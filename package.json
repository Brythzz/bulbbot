{
	"name": "bulbbot",
	"version": "0.0.1",
	"description": "A discord moderation bot written in Discord.JS",
	"main": "src/index.ts",
	"scripts": {
		"watch": "tsc -w",
		"prestart": "tsc",
		"start": "node build/index.js",
		"nobuild": "node build/index.js",
		"dev": "nodemon build/index.js --ignore ./files --delay 100ms",
		"pm2-start": "pm2 start build/index.js --watch --output ./logs/log.log --error ./logs/error.log --time --name bulbbot",
		"db-sync": "node build/utils/database/sync.js",
		"delete:build": "rimraf build/*"
	},
	"repository": "git+https://github.com/TeamBulbbot//Bulbbot.git",
	"author": "Team Bulbbot",
	"license": "Creative Commons Attribution-NonCommercial-NoDerivatives 4.0 International License",
	"bugs": {
		"url": "https://github.com/TeamBulbbot//Bulbbot/issues"
	},
	"homepage": "https://github.com/TeamBulbbot//Bulbbot#readme",
	"dependencies": {
		"@hapi/hapi": "^20.2.0",
		"@messageformat/runtime": "^3.0.0",
		"@sentry/node": "^6.13.2",
		"@sentry/tracing": "^6.13.2",
		"axios": "^0.22.0",
		"discord.js": "^13.2.0",
		"discord.js-pagination": "^1.0.3",
		"dotenv": "^10.0.0",
		"emoji-unicode": "^2.0.1",
		"i18next": "^21.2.4",
		"i18next-icu": "^2.0.3",
		"install": "^0.13.0",
		"intl-messageformat": "^9.9.2",
		"js-yaml": "^4.1.0",
		"moment": "^2.29.1",
		"moment-timezone": "^0.5.33",
		"parse-duration": "^1.0.0",
		"pg": "^8.7.1",
		"pg-hstore": "^2.3.4",
		"prom-client": "^14.0.0",
		"safe-timers": "^1.1.0",
		"sequelize": "^6.6.5",
		"sharp": "^0.29.1",
		"shelljs": "^0.8.4",
		"unicode": "^13.0.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@messageformat/core": "^3.0.0",
		"@types/glob": "^7.1.4",
		"@types/sharp": "^0.29.2",
		"prettier": "^2.4.1",
		"sequelize-cli": "^6.2.0",
		"typescript": "^4.4.3"
	}
}
